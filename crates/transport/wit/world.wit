package wasmcp:transport@0.1.0;

world transport {
    // Export both HTTP and CLI interfaces
    // Runtime imports only what it needs
    include wasi:http/proxy@0.2.3;
    include wasi:cli/command@0.2.3;

    // Import server-handler for middleware delegation
    include wasmcp:mcp-v20250618/server-transport@0.1.4-beta.2;

    // Import server-io for JSON-RPC parsing/serialization
    import wasmcp:mcp-v20250618/server-io@0.1.4-beta.2;

    // Import session-manager for session lifecycle management
    import wasmcp:mcp-v20250618/session-manager@0.1.4-beta.2;
}
